<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserCartActivity"
    android:gravity="center_horizontal|center_vertical"
    android:layout_margin="30dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="200dp"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="43dp"
        tools:srcCompat="@drawable/coffee"
        android:layout_margin="30dp"/>

    <TextView
        android:id="@+id/menuCost"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/button"
        android:text="Total: 4000"
        android:textColor="#000000"
        android:textSize="18sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:background="@drawable/button"
        android:id="@+id/menuPay"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="결제 수단"
        android:layout_margin="10dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:background="@drawable/button"
        android:id="@+id/menuEat"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="매장/pick up"
        android:layout_margin="10dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:background="@drawable/button_full"
        android:id="@+id/pay"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="결제"
        android:layout_marginTop="20dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:background="@drawable/button_full"
        android:id="@+id/notpay"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="결제취소"
        android:layout_marginTop="10dp"
        />

</LinearLayout>