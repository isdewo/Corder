<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".UserCafeInfoActivity">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="가게이름"
            android:textSize="34sp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="167dp" />

        <ImageView
            android:id="@+id/shopPicture"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:srcCompat="@drawable/coffee"
            android:layout_marginBottom="20dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="영업시간: "
                android:textSize="25sp" />
            <TextView
                android:id="@+id/inputTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="10:00 ~ 18:00 "
                android:textSize="25sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="휴게시간: "
                android:textSize="25sp" />
            <TextView
                android:id="@+id/breakTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="10:00 ~ 18:00 "
                android:textSize="25sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="주소: "
                android:textSize="25sp" />
            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="경기도 용인시 처인구 남동 명지대학교 용인캠퍼스"
                android:textSize="25sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="최소주문: "
                android:textSize="25sp" />
            <TextView
                android:id="@+id/lowOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="15,000원"
                android:textSize="25sp"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/menuList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/list_menu" />

    </LinearLayout>
</ScrollView>